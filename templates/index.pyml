-!!!
%html
  %head
    %meta(charset:"UTF-8")
    %link(rel:"stylesheet" href:"/css_src")
    %title SpotEx

  %body
    %form#controls(action:"/json" method:"POST")
      .header
        ==form.search.render
        %button#prev Previous
        ==form.page.render
        %button#next Next
        %button#reset Reset
      %table
        %thead
          %tr#theader
            %th
            -for name in searchable_fields
              %th
                =name.capitalize
            -for field in sortable_fields
              %th
                =field.name.capitalize
                %br
                ==field.render
        %tbody#songs!
    %table.hidden
      %tr#template
        %td.preview
          %a(href:"#" title:"Preview")
            â–¶
        -for name in searchable_fields
          %td(class:"=name")!
        -for field in sortable_fields
          %td(class:"=field.name")!
    %audio#preview.hidden(autoplay:"")!

    %script(src:"/js_src")!
    %script
      js().setup()
